<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ychvincent.itproject2.KKOCK_Profile">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_profileicon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            app:srcCompat="@mipmap/ic_profileicon"/>

        <TextView
            android:id="@+id/tv_stuID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_profileicon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Student ID"
            android:textSize="22sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_stuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_stuID"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Student Name"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_stuProgramme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_stuName"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Programme Name"
            android:textSize="22sp"
            android:textStyle="normal"/>




        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_recycler_view" />

    </LinearLayout>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_showqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="6dp"
        android:src="@mipmap/ic_scanqr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp" />








</android.support.constraint.ConstraintLayout>
